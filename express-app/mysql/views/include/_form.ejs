<form action="/api/tickets" method="POST" id="add_ticket">
    <div class="new_ticket">
        <div class="form-group">
            <label for="segments_airline_name" class="text-light">Segments Airline Name</label>
            <input type="hidden" name="ticket_id" value="">
            <input type="text" name="segments_airline_name" value="" placeholder="...">
        </div>
        <div class="form-group">
            <label for="segments_airline_code" class="text-light">Segments Airline Code</label>
            <input type="text" name="segments_airline_code" value="" placeholder="...">
        </div>
        <div class="form-group">
            <label for="segments_equipment_description" class="text-light">Segments Equipment Description</label>
            <input type="text" name="segments_equipment_description" value="" placeholder="...">
        </div>
        <div class="form-group">
            <label for="starting_airport" class="text-light">Starting Airport</label>
            <input type="text" name="starting_airport" value="" placeholder="...">
        </div>
        <div class="form-group">
            <label for="destination_airport" class="text-light">Destination Airport</label>
            <input type="text" name="destination_airport" value="" placeholder="...">
        </div>
        <div class="form-group">
            <label for="flight_date" class="text-light">Flight Date</label>
            <input type="date" name="flight_date" value="" placeholder="...">
        </div>
        <div class="form-group">
            <label for="travel_duration" class="text-light">Travel Duration</label>
            <input type="time" name="travel_duration" value="" placeholder="...">
        </div>

        <div class="form-group">
            <label for="is_non_stop" class="text-light">Is Non Stop?</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="is_non_stop" value=0 >
                <label for="radio-2" class="radio-label">No</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="is_non_stop" value=1 >
                <label for="radio-3" class="radio-label">Yes</label>
            </div>
        </div>

        <div class="form-group">
            <label for="is_basic_economy" class="text-light">Is Basic Economy?</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="is_basic_economy" value=0 >
                <label for="radio-4" class="radio-label">No</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="is_basic_economy" value=1 >
                <label for="radio-5" class="radio-label">Yes</label>
            </div>
        </div>

        <div class="form-group">
            <label for="is_refundable" class="text-light">Is Refundable?</label>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="is_refundable" value=0 >
                <label for="radio-6" class="radio-label">No</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-7" name="is_refundable" value=1 >
                <label for="radio-7" class="radio-label">Yes</label>
            </div>
        </div>

        <div class="form-group">
            <label for="base_fare" class="text-light">Base Fare</label>
            <input type="number" step="0.01"  name="base_fare" value="" placeholder="...">
        </div>
        <div class="form-group">
            <label for="total_fare" class="text-light">Total Fare</label>
            <input type="number" step="0.01" name="total_fare" value="" placeholder="...">
        </div>
        <div class="form-group">
            <label for="search_date" class="text-light">Search Date</label>
            <input type="date" name="search_date" value="" placeholder="...">
        </div>
        <div class="form-group">
            <label for="seat_remaining" class="text-light">Seat Remaining</label>
            <input type="number" name="seat_remaining" value="" placeholder="...">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>